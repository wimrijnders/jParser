<project name="parser" default="build" basedir=".">
	<!-- Following is the timer task
		 source: http://www.jeckle.de/freeStuff/AntTimerTask/index.html
	  -->
	<taskdef name="timer" classname="de.jeckle.AntExtension.Timer"/>

	<!-- global properties -->
	<property name="src"   location="src"/>
	<property name="build" location="build"/>
	<property name="dist"  location="dist"/>
	<property name="doc"   location="doc"/>
	<property name="test"  location="test"/>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp/>
		
		<mkdir dir="${build}"/>
		<mkdir dir="${dist}/lib"/>
		<mkdir dir="${test}"/>
	</target>

	<target name="compile" depends="init" >
		<javac srcdir="${src}" destdir="${build}">

			<!-- don't compile the main test program at this point -->
			<exclude name="nl/axizo/EBNF/EBNFMain.java" />
		</javac>
	</target>

	<target name="build" depends="compile" >
		<jar jarfile="${dist}/lib/parser.jar" basedir="${build}"/>
	</target>


	<!-- TODO: check if following is really useful -->
	<target name="ebnf_changed" >
		<uptodate property="ebnf_isUpToDate"
            srcfile="ebnf.ebnf"
            targetfile="${test}/EBNF.java"
		/>
	</target>


	<target name="run" depends="build, ebnf_changed" unless="ebnf_isUpToDate">
	  <timer name="run">
		<java 
				classname="nl.axizo.EBNFInitial" 
				dir="${test}"
				fork="true"
				failonerror="true"
		>
			<!-- up-dir needed because we start in a subdir -->
			<arg value="../ebnf.ebnf"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</java>
	  </timer>
	</target>

	<target name="parse" depends="build">
		<description>
			This task is same as 'run', with the addition
			two parameters
		</description>

	  <timer name="parse">
		<java 
				classname="nl.axizo.EBNFInitial" 
				dir="${test}"
				fork="true"
				failonerror="true"
		>
			<!-- up-dir needed because we start in a subdir -->
			<arg value="-p"/>
			<arg value="nodes_parseonly.txt"/>
			<arg value="../ebnf.ebnf"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</java>
	  </timer>
	</target>

	<target name="doc" depends="build">
		<javadoc sourcepath="${src}"
				 destdir="${doc}"
				 access="private"
		>
			<doctitle><![CDATA[<h1>Parser Technical Documentation</h1>]]></doctitle>
		</javadoc>
	</target>

	<target name="compile_test" depends="run" >
		<echo>Compiling test</echo>
		<!-- Compile the generated parser -->	
		<copy file="${src}/nl/axizo/EBNF/EBNFMain.java" 
			tofile="${test}/nl/axizo/EBNF/EBNFMain.java" 
		/>
		<javac destdir="${test}">
			<src path="${test}"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="test" depends="compile_test" >
		<!-- And run the compiled result -->
		<echo>Running test</echo>
	  <timer name="test">
		<java 
				classname="nl.axizo.EBNF.EBNFMain" 
				dir="${test}"
				fork="true"
				failonerror="true"
		>
			<jvmarg value="-javaagent:/home/wri/Desktop/jip/profile/profile.jar" />
			<!-- up-dir needed because we start in a subdir -->
			<arg value="../ebnf.ebnf"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
				<pathelement location="${test}"/>
			</classpath>
		</java>
	  </timer>
	</target>
		

	<target name="clean" >
	<delete includeemptydirs="true">
		<fileset dir="${build}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${dist}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${doc}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${test}" >
			<include name="**/*" />
		</fileset>
	</delete>
	</target>
</project>

