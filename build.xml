<project name="parser" default="build" basedir=".">
	<!-- global properties -->
	<property name="src"   location="src"/>
	<property name="build" location="build"/>
	<property name="dist"  location="dist"/>
	<property name="doc"   location="doc"/>
	<property name="test"  location="test"/>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp/>
		
		<mkdir dir="${build}"/>
		<mkdir dir="${dist}/lib"/>
		<mkdir dir="${test}"/>
	</target>

	<target name="compile" depends="init" >
		<javac srcdir="${src}" destdir="${build}"/>
	</target>

	<target name="build" depends="compile" >
		<jar jarfile="${dist}/lib/parser.jar" basedir="${build}"/>
	</target>

	<target name="run" depends="build">
		<java 
				classname="nl.axizo.EBNFInitial" 
				dir="${test}"
				fork="true"
		>
			<!-- up-dir needed because we start in a subdir -->
			<arg value="../ebnf.ebnf"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</java>
	</target>

	<target name="doc" depends="build">
		<javadoc sourcepath="${src}"
				 destdir="${doc}"
				 access="private"
		>
			<doctitle><![CDATA[<h1>Parser Technical Documentation</h1>]]></doctitle>
		</javadoc>
	</target>

	<target name="test" depends="run" >
		<!-- Compile the generated parser -->	
		<javac srcdir="${test}" destdir="${test}">
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</javac>

		<!-- TODO: Following part not completed yet -->
		<!-- And run the compiled result -->
		<java 
				classname="nl.axizo.EBNF" 
				dir="${test}"
				fork="true"
		>
			<!-- up-dir needed because we start in a subdir -->
			<arg value="../ebnf.ebnf"/>
			<classpath>
				<pathelement location="${dist}/lib/parser.jar"/>
			</classpath>
		</java>
	</target>
		

	<target name="clean" >
	<delete>
		<fileset dir="${build}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${dist}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${doc}">
			<include name="**/*" />
		</fileset>
		<fileset dir="${test}">
			<include name="**/*" />
		</fileset>
	</delete>
	</target>
</project>

